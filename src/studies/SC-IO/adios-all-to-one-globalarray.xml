<?xml version="1.0"?>
<adios-config host-language="C">
    <adios-group name="source" coordination-communicator="comm_worker" >
	    <var name="chunk_total" type="long" />
		<var name="chunk_offset" type="long" />
		<var name="chunk_size" type="long" />
		<var name="imageNameLen" type="integer" />
	    <global-bounds dimensions="chunk_total" offsets="chunk_offset">
			<var name="imageName" type="unsigned byte" dimensions="chunk_size,imageNameLen" />
		    <var name="tileSizeX" type="integer" dimensions="chunk_size" />
			<var name="tileSizeY" type="integer" dimensions="chunk_size" />
		    <var name="tileOffsetX" type="integer" dimensions="chunk_size" />
			<var name="tileOffsetY" type="integer" dimensions="chunk_size" />
			<var name="channels" type="integer" dimensions="chunk_size" />
			<var name="elemSize1" type="integer" dimensions="chunk_size" />
			<var name="cvDataType" type="integer" dimensions="chunk_size" />
			<var name="encoding" type="unsigned byte" dimensions="chunk_size,3" />
			<var name="id" type="long" dimensions="chunk_size" />
			<var name="tile_offset" type="long" dimensions="chunk_size" />
			<var name="tile_size" type="long" dimensions="chunk_size" />
	    </global-bounds>
	   	<var name="chunk_data_total" type="long" />
		<var name="chunk_data_offset" type="long" />
		<var name="chunk_data_size" type="long" />
	    <global-bounds dimensions="chunk_data_total" offsets="chunk_data_offset">
			<var name="tiles" type="unsigned byte" dimensions="chunk_data_size" />
	    </global-bounds>	    
    </adios-group>
    <method group="source" method="MPI"/>
    <buffer size-MB="128" allocate-time="now"/>
</adios-config>
